# Database (Vercel Postgres or local PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/compensation_db?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/compensation_db?schema=public"

# NextAuth Configuration
# IMPORTANT: Generate a strong secret using: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32"

# Rate Limiting (optional - defaults shown)
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=900000

# Development Only - Seed Password (optional)
# If not set, a random secure password will be generated
# SEED_PASSWORD="your-dev-seed-password"

# Security Monitoring (optional)
# SECURITY_ALERT_EMAIL="security@yourcompany.com"
